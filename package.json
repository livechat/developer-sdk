{
  "name": "@livechat/developer-sdk",
  "version": "1.0.0",
  "private": false,
  "description": "This project is SDK for creating LiveChat Developer Applications.",
  "author": "Wojciech Dudek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livechat/developer-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/livechat/developer-sdk/issues"
  },
  "homepage": "https://github.com/livechat/developer-sdk#readme",
  "files": [
    "dist",
    "types"
  ],
  "main": "dist/developer-sdk.cjs.js",
  "module": "dist/developer-sdk.es.js",
  "unpkg": "dist/developer-sdk.umd.min.js",
  "typings": "types/src/index.d.ts",
  "scripts": {
    "build": "rollup -c --context this",
    "prebuild": "rimraf dist && rimraf types",
    "prepublishOnly": "npm run test:ci && npm run build",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "lint": "npx eslint --fix .",
    "format": "npx prettier --write .",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@livechat/accounts-sdk": "^2.0.6",
    "axios": "^1.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.md": [
      "npx prettier --write"
    ]
  }
}
